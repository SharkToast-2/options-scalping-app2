{
  "version": "1.0",
  "security_monitoring": {
    "enabled": true,
    "check_interval": 300,
    "alerts": {
      "file_permission_changes": true,
      "new_sensitive_files": true,
      "api_key_usage": true,
      "failed_authentication": true
    }
  },
  "performance_monitoring": {
    "enabled": true,
    "metrics": [
      "api_response_time",
      "error_rate",
      "memory_usage",
      "cpu_usage"
    ]
  },
  "logging": {
    "security_events": true,
    "performance_metrics": true,
    "error_tracking": true
  }
}