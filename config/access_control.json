{
  "version": "1.0",
  "access_rules": {
    "config_files": {
      "permissions": "600",
      "owner_only": true,
      "description": "Sensitive configuration files"
    },
    "log_files": {
      "permissions": "640",
      "owner_only": true,
      "description": "Application logs"
    },
    "api_keys": {
      "encrypted": true,
      "description": "API keys must be encrypted"
    }
  },
  "security_checks": {
    "file_permissions": true,
    "encryption": true,
    "git_security": true
  }
}